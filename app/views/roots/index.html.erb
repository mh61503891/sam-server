<p id="notice"><%= notice %></p>

<h1>Roots</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roots.each do |root| %>
      <tr>
        <td><%= link_to 'Show', root %></td>
        <td><%= link_to 'Edit', edit_root_path(root) %></td>
        <td><%= link_to 'Destroy', root, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

